doctype html
html
  include includes/head.pug
  body
  .container
    include includes/manit_header.pug
    include includes/navbar.pug
    .container(style="width:600px;margin-top:45px")
      h1 New Application 
      p.lead Faculty Recruitment Portal.
      br
      form
        .form-group.row
          label.col-sm-4.col-form-label(for='advertisement_no') Advertisement No.
          .col-sm-8
            input#advertisement_no.form-control(type='text',name='advertisement_no' value='Advt./Faculty-NITK/Estt./2019/B1. Dt. 07/02/2019', readonly='',required)
        .form-group.row
          label.col-sm-4.col-form-label(for='post_applied_for') Post Applied For
          .col-sm-8
            select#post_applied_for.form-control(name='post_applied_for',required) 
                option(value="") Select Applied Post
                option(value="1") Assistant Professor Grade I
                option(value="2") Assistant Professor Grade II   
        .form-group.row
          label.col-sm-4.col-form-label(for='department') Department
          .col-sm-8
            select#department.form-control(name='department',required)
                option(value='') Department
                option(value='ARC') Architecture and Planning 
                option(value='CHE') Chemical Engineering
                option(value='CHY') Chemistry
                option(value='CVE') Civil Engineering
                option(value='CSE') Computer Science & Engineering
                option(value='EEE') Electrical Engineering 
                option(value='ECE') Electronics and Communication Engineering
                option(value='HUM') Humanities and Social Sciences
                option(value='MCS') Mathematics Computer Application & Bio-informatics
                option(value='MLE') Mechanical Engineering
                option(value='MME') Metallurgical and Materials Engineering
                option(value='PHY') Physics                       
        .form-group.row
          .col-sm-10
          .col-sm-2
            button.btn.btn-primary(type='submit',style="align:end") Next